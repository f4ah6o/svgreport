{
  "name": "svgreport",
  "version": "2026.2.0",
  "description": "SVG report generator - Flow CSV data into PDF-based SVG templates for printing",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "svgreport": "dist/cli.js"
  },
  "scripts": {
    "build": "rolldown -c rolldown.config.js",
    "dev": "tsc --watch",
    "test": "node --test dist/**/*.test.js",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "svg",
    "report",
    "pdf",
    "printing",
    "template"
  ],
  "author": "f12o",
  "license": "MIT",
  "files": [
    "dist/",
    "LICENSE",
    "README.md",
    "README.ja.md"
  ],
  "dependencies": {
    "@xmldom/xmldom": "^0.8.11",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "commander": "^12.1.0",
    "csv-parse": "^5.6.0",
    "jszip": "^3.10.1",
    "xpath": "^0.0.34"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "@types/xmldom": "^0.1.34",
    "oxlint": "^1.42.0",
    "rolldown": "1.0.0-rc.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.28.0"
}
